<script>
function showSection(id){
    document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));
    document.getElementById(id).classList.add('active');
}

function filterMovies(category, btn){
    document.querySelectorAll('.category-btn').forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    document.querySelectorAll('.movie-item').forEach(m=>{
        m.style.display = category==='all'||m.dataset.category===category?'flex':'none';
    });
}

function searchMovies(text){
    text = text.toLowerCase();

    // Always go to Movies section when searching
    showSection('movies');

    // Remove active state from category buttons
    document.querySelectorAll('.category-btn').forEach(b=>b.classList.remove('active'));

    // Show all first before filtering
    document.querySelectorAll('.movie-item').forEach(m=>{
        m.style.display = 'flex';
    });

    // Filter by search text
    document.querySelectorAll('.movie-item').forEach(m=>{
        if(!m.dataset.title.toLowerCase().includes(text)){
            m.style.display = 'none';
        }
    });
}


/* PLAYER */
const player=document.getElementById("netflixPlayer");
const video=document.getElementById("netflixVideo");

// Play video for any button with data-video
document.querySelectorAll(".movie-item button[data-video]").forEach(btn=>{
    btn.onclick=()=>{video.src=btn.dataset.video; player.style.display="flex"; video.play();}
});

document.querySelector(".close-player").onclick=()=>{video.pause();video.src="";player.style.display="none"}
player.onclick=e=>{if(e.target===player){video.pause();video.src="";player.style.display="none"}}

/* SEASONS & EPISODES - Scoped per movie */
document.querySelectorAll(".movie-item").forEach(movie=>{
    const seasonBtn = movie.querySelector(".toggle-season");
    if(seasonBtn){
        const seasonContainer = movie.querySelector(".season-container");
        seasonBtn.onclick=()=>{seasonContainer.style.display = seasonContainer.style.display==="flex"?"none":"flex";};
        movie.querySelectorAll(".toggle-episodes").forEach(epBtn=>{
            const episodeList = epBtn.nextElementSibling;
            epBtn.onclick=()=>{episodeList.style.display = episodeList.style.display==="flex"?"none":"flex";};
        });
    }
});
</script>
