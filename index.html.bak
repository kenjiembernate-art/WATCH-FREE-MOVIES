*{margin:0;padding:0;box-sizing:border-box;font-family:Roboto,sans-serif}
body{background:#151515;color:white;overflow:hidden}

/* NAVBAR */
.navbar{position:fixed;top:0;width:100%;height:60px;background:black;z-index:1000}
.navbar-container{display:flex;justify-content:space-between;align-items:center;height:100%;padding:0 40px}
.logo{color:red;font-size:28px;font-weight:bold}
.menu{list-style:none;display:flex;gap:25px}
.menu li{cursor:pointer}
.menu li:hover{color:red}
.search-box{background:#222;border:none;padding:6px 12px;color:white;border-radius:20px;outline:none}

/* SECTIONS */
.section{display:none;width:100vw;height:100vh;position:absolute;top:0;left:0;padding:100px 50px;overflow-y:auto;transition:opacity 0.3s ease;background:#151515}
.section.active{display:block;opacity:1;z-index:10}

/* CATEGORIES */
.categories{display:flex;gap:15px;margin-bottom:20px}
.category-btn{padding:8px 18px;background:#222;border:none;color:white;cursor:pointer;border-radius:20px}
.category-btn.active,.category-btn:hover{background:red}

/* MOVIES */
.movie-list{display:flex;gap:20px;flex-wrap:wrap}
.movie-item{width:200px; display:flex; flex-direction:column; align-items:center; position:relative;}
.movie-item img{width:100%;border-radius:10px}
.movie-item .movie-title{margin-top:5px; text-align:center; font-weight:bold; font-size:14px; color:white;}
.movie-item button{width:100%;margin-top:5px;padding:8px;background:red;border:none;color:white;cursor:pointer;border-radius:5px}

/* SEASONS & EPISODES */
.season-container{display:none; position:relative; top:0; left:0; width:100%; background:#222; padding:5px; border-radius:8px; flex-direction:column; gap:5px;}
.episode-list{display:none; flex-direction:column; gap:5px;}
.season-container button, .episode-list button{background:#444; font-size:14px; width:100%; text-align:left; cursor:pointer;}

/* PLAYER */
.netflix-player{position:fixed;inset:0;background:rgba(0,0,0,.95);display:none;justify-content:center;align-items:center;z-index:9999}
.netflix-player-content{width:85%;max-width:900px;position:relative}
.netflix-player video{width:100%;border-radius:12px}
.close-player{position:absolute;top:-40px;right:0;font-size:35px;cursor:pointer}

/* HOME BACKGROUND VIDEO */
#home{position:relative;overflow:hidden;height:100vh;padding:0;display:flex;justify-content:center;align-items:center;text-align:center}
#homeVideo{position:absolute;top:0;left:0;width:100%;height:100%;object-fit:cover;z-index:-2}
.home-overlay{position:absolute;inset:0;background:rgba(0,0,0,0.6);z-index:-1}
.home-content{z-index:2}
</style>
